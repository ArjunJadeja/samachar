<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryActionButton">
        <item name="cornerRadius">@dimen/corner_medium</item>
        <item name="backgroundTint">?colorPrimary</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_smaller</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="SecondaryActionButton">
        <item name="cornerRadius">@dimen/corner_medium</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="backgroundTint">?colorOnPrimary</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_smaller</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
</resources>